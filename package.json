{
  "name": "astro-starter-kit",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npx simple-git-hooks && npm run generate-schema",
    "dev": "astro dev",
    "start": "astro dev",
    "prebuild": "npm run generate-llms",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-schema": "npx datocms schema:generate schema.ts",
    "generate-llms": "dotenv -e .env -- node scripts/generate-llms.mjs",
    "lint": "prettier --check .",
    "format": "npx prettier . --write"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/tailwind": "^6.0.2",
    "@datocms/astro": "^0.6.2",
    "@datocms/cda-client": "^0.2.6",
    "@datocms/cli": "^3.1.4",
    "@datocms/cma-client": "^4.0.1",
    "astro": "^5.15.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.5",
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  }
}

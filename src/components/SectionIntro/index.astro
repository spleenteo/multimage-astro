---
import styles from './style.module.css';

type Props = {
  title: string;
  description?: string | null;
  align?: 'left' | 'center';
  className?: string;
};

const { title, description, align = 'left', className = '' }: Props = Astro.props;
const alignmentClass = align === 'center' ? styles.alignCenter : styles.alignLeft;
---

<div class:list={[styles.root, className]}>
  <div class={styles.background}></div>
  <div class:list={[styles.content, alignmentClass]}>
    <h1 class={styles.title}>{title}</h1>
    {description ? <p class={styles.description}>{description}</p> : null}
  </div>
</div>

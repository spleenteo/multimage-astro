---
type DetailItem = {
  label: string;
  value: string;
  href?: string | null;
};

type Props = {
  title: string;
  items: DetailItem[];
};

const { title, items }: Props = Astro.props;
---

<div class="space-y-4">
  <h3 class="text-2xl font-serif text-brand-charcoal">{title}</h3>
  {
    items.length === 0 ? (
      <p class="bg-brand-mist/40 p-4 text-sm text-brand-slate">
        Informazioni in aggiornamento.
      </p>
    ) : (
      <dl class="space-y-3">
        {items.map((item) => (
          <div class="space-y-1">
            <dt class="text-xs font-semibold uppercase tracking-wider text-brand-slate">
              {item.label}
            </dt>
            <dd class="text-base text-brand-charcoal">
              {item.href ? (
                <a href={item.href} class="hover:text-brand-navy">
                  {item.value}
                </a>
              ) : (
                <span>{item.value}</span>
              )}
            </dd>
          </div>
        ))}
      </dl>
    )
  }
</div>

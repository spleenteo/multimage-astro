---
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import '../styles/global.css';

import { Seo, type TitleMetaLinkTag } from '@datocms/astro';
import { TagFragment } from '~/lib/datocms/commonFragments';
import { executeQuery } from '~/lib/datocms/executeQuery';
import { graphql } from '~/lib/datocms/graphql';

const { seo = [] }: { seo?: TitleMetaLinkTag[] } = Astro.props;

const siteQuery = graphql(
  /* GraphQL */ `
    query SiteMeta {
      _site {
        faviconMetaTags {
          ...TagFragment
        }
      }
    }
  `,
  [TagFragment],
);

const { _site } = await executeQuery(siteQuery);
const faviconTags = _site?.faviconMetaTags ?? [];
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <Seo data={[...faviconTags, ...seo]} />
    <script
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
      type="module"
      defer
      is:inline></script>
  </head>
  <body class="flex min-h-screen flex-col bg-brand-sand">
    <Header currentPath={currentPath} />
    <main class="flex-1 bg-white">
      <div class="container py-12 md:py-16">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>

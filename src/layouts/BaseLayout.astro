---
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import '../styles/global.css';

import { Seo, type TitleMetaLinkTag } from '@datocms/astro';
import { PUBLIC_SITE_URL } from 'astro:env/client';
import { TAG_FRAGMENT } from '~/lib/datocms/commonFragments';
import { executeQuery } from '~/lib/datocms/executeQuery';
import type { PageRecord, SeoMetaTag } from '~/lib/datocms/types';
import { resolveDraftMode } from '~/lib/draftPreview';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import { decodeEntities, toPlainText, truncateToLength } from '~/lib/text';

const { seo = [] } = Astro.props as {
  seo?: TitleMetaLinkTag[];
};
const enableVercelInsights = import.meta.env.PROD;

const SITE_QUERY = /* GraphQL */ `
  ${TAG_FRAGMENT}
  query SiteMeta {
    _site {
      faviconMetaTags {
        ...TagFragment
      }
    }
    headerPages: allPages(filter: { menu: { eq: true } }, orderBy: position_ASC, first: 100) {
      id
      slug
      label
    }
    footerPages: allPages(filter: { menuFooter: { eq: true } }, orderBy: position_ASC, first: 100) {
      id
      slug
      label
    }
  }
`;

type SiteMetaResult = {
  _site: {
    faviconMetaTags: SeoMetaTag[] | null;
  } | null;
  headerPages: Array<Pick<PageRecord, 'id' | 'slug' | 'label'>> | null;
  footerPages: Array<Pick<PageRecord, 'id' | 'slug' | 'label'>> | null;
};

function normalizeCanonicalBase(candidate: string | URL | null | undefined): string | null {
  if (!candidate) {
    return null;
  }
  const value = typeof candidate === 'string' ? candidate : candidate.toString();
  const trimmed = value.trim();
  if (!trimmed) {
    return null;
  }

  try {
    const url = new URL(trimmed);
    url.hash = '';
    url.search = '';
    return url.toString().replace(/\/+$/, '');
  } catch {
    return null;
  }
}

function buildCanonicalHref(base: string, pathname: string): string {
  if (!pathname || pathname === '/') {
    return `${base}/`;
  }

  return `${base}${pathname}`;
}

const draftModeEnabled = resolveDraftMode(Astro);

const { _site, headerPages, footerPages } = await executeQuery<SiteMetaResult>(SITE_QUERY, {
  includeDrafts: draftModeEnabled,
});
const faviconTags = _site?.faviconMetaTags ?? [];
const currentPath = Astro.url.pathname;
const canonicalBase =
  normalizeCanonicalBase(PUBLIC_SITE_URL) ??
  normalizeCanonicalBase(Astro.site ?? null) ??
  normalizeCanonicalBase(Astro.url.origin);

const canonicalHref = canonicalBase ? buildCanonicalHref(canonicalBase, currentPath) : null;
const canonicalTags: TitleMetaLinkTag[] =
  canonicalHref && !seo.some((tag) => tag.tag === 'link' && tag.attributes?.rel === 'canonical')
    ? [
        {
          tag: 'link',
          attributes: {
            rel: 'canonical',
            href: canonicalHref,
          },
          content: null,
        },
      ]
    : [];

function mapPagesToLinks(pages: Array<Pick<PageRecord, 'id' | 'slug' | 'label'>> | null) {
  return (pages ?? [])
    .map((page) => {
      const slug = page.slug?.trim();
      const label = page.label?.trim();
      if (!slug || !label) {
        return null;
      }
      return {
        id: page.id,
        label,
        href: `/info/${slug}`,
      };
    })
    .filter((entry): entry is { id: string; label: string; href: string } => Boolean(entry));
}

const infoPages = mapPagesToLinks(headerPages);
const footerMenuPages = mapPagesToLinks(footerPages);

const escapeAttr = (value: string) =>
  value
    .replace(/&/g, '&amp;')
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;')
    .replace(/"/g, '&quot;')
    .replace(/'/g, '&#39;');

const sanitizeMetaTags = (tags: TitleMetaLinkTag[]): TitleMetaLinkTag[] =>
  tags.map((tag) => {
    if (tag.tag !== 'meta' || !tag.attributes) {
      return tag;
    }

    const descriptor = (tag.attributes.name ?? tag.attributes.property ?? '')
      .toString()
      .toLowerCase();
    const rawContent =
      (typeof tag.attributes.content === 'string' && tag.attributes.content) ||
      (typeof tag.content === 'string' ? tag.content : '') ||
      '';
    const decoded = decodeEntities(rawContent);
    const normalized = descriptor.includes('description')
      ? truncateToLength(toPlainText(decoded), 240)
      : truncateToLength(decoded, 160);
    const withoutQuotes = normalized.replace(/"/g, "'");
    const safeContent = escapeAttr(withoutQuotes);

    return {
      ...tag,
      attributes: {
        ...tag.attributes,
        content: safeContent,
      },
      content: safeContent,
    };
  });

const seoData = sanitizeMetaTags([...(seo ?? []), ...faviconTags, ...canonicalTags]);
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <Seo data={seoData} />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    <link rel="dns-prefetch" href="https://cdn.iubenda.com" />
    <script
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
      type="module"
      defer
      is:inline></script>

    <!-- Google Analytics (legacy UA profile kept from previous site) -->
    <script is:inline>
      (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        ((i[r] =
          i[r] ||
          function () {
            (i[r].q = i[r].q || []).push(arguments);
          }),
          (i[r].l = 1 * new Date()));
        ((a = s.createElement(o)), (m = s.getElementsByTagName(o)[0]));
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m);
      })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-796094-5', 'auto');
      ga('set', 'anonymizeIP', true);
      ga('send', 'pageview');
    </script>

    <!-- Iubenda cookie solution (mirrors legacy banner) -->
    <script is:inline>
      // Global configuration consumed by Iubenda Consent Solution
      var _iub = window._iub || [];
      _iub.csConfiguration = {
        cookiePolicyId: 47684062,
        siteId: '47684062',
        lang: 'it',
        banner: {
          position: 'float-top-center',
          acceptButtonDisplay: true,
          customizeButtonDisplay: true,
        },
      };

      (function (w, d) {
        var loader = function () {
          var s = d.createElement('script');
          var tag = d.getElementsByTagName('script')[0];
          s.src = 'https://cdn.iubenda.com/iubenda.js';
          tag.parentNode.insertBefore(s, tag);
        };
        if (w.addEventListener) {
          w.addEventListener('load', loader, false);
        } else if (w.attachEvent) {
          w.attachEvent('onload', loader);
        } else {
          w.onload = loader;
        }
      })(window, document);
    </script>
    <script async charset="utf-8" src="https://cdn.iubenda.com/cs/stable/iubenda_cs.js" is:inline
    ></script>

    <!-- Stub + script Vercel Web Analytics -->
    <script is:inline>
      window.va =
        window.va ||
        function () {
          (window.vaq = window.vaq || []).push(arguments);
        };
    </script>
    <script defer src="/_vercel/insights/script.js" is:inline></script>

    <script is:inline>
      window.si =
        window.si ||
        function () {
          (window.siq = window.siq || []).push(arguments);
        };
    </script>
    <script defer src="/_vercel/speed-insights/script.js" is:inline></script>
  </head>
  <body class="flex min-h-screen flex-col bg-brand-sand">
    <Header currentPath={currentPath} infoPages={infoPages} />
    <main class="flex-1 bg-white">
      <div class="container py-12 md:py-16">
        <slot />
      </div>
    </main>
    <Footer footerPages={footerMenuPages} />
    {enableVercelInsights && <Analytics />}
    {enableVercelInsights && <SpeedInsights />}
  </body>
</html>

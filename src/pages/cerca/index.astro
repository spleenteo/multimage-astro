---
import BaseLayout from '~/layouts/BaseLayout.astro';
import { withFallbackSeo } from '~/lib/seo';

export { prerender } from '~/lib/prerender';

const MIN_QUERY_LENGTH = 3;
const SITE_SEARCH_ENDPOINT = 'https://site-api.datocms.com/search-results';

const siteSearchToken = import.meta.env.PUBLIC_DATOCMS_SITE_SEARCH_API_TOKEN;

if (!siteSearchToken) {
  throw new Error(
    'La variabile PUBLIC_DATOCMS_SITE_SEARCH_API_TOKEN è obbligatoria per la pagina di ricerca.',
  );
}

const searchConfig = {
  endpoint: SITE_SEARCH_ENDPOINT,
  token: siteSearchToken,
  minQueryLength: MIN_QUERY_LENGTH,
  limit: 25,
  fuzzy: true,
};

const searchScriptSrc = import.meta.env.DEV
  ? '/src/pages/cerca/search-page.client.ts'
  : '/generated/search-page.client.js';

const seo = withFallbackSeo([], {
  title: 'Cerca | Multimage',
  description:
    'Cerca libri, autrici e autori, articoli del magazine e tutte le risorse del sito Multimage interrogando direttamente l’indice di DatoCMS.',
});
---

<BaseLayout seo={seo}>
  <section class="search-page">
    <div
      class="container search-page__container"
      data-search-root
      data-endpoint={searchConfig.endpoint}
      data-token={searchConfig.token}
      data-min-length={String(searchConfig.minQueryLength)}
      data-limit={String(searchConfig.limit)}
      data-fuzzy={searchConfig.fuzzy ? 'true' : 'false'}
    >
      <header class="search-page__intro">
        <h1 class="search-page__title">Cerca nel catalogo Multimage</h1>
        <p class="search-page__subtitle">
          Digita almeno {MIN_QUERY_LENGTH} caratteri per avviare la ricerca. I risultati vengono aggiornati
          in tempo reale senza ricaricare la pagina.
        </p>
      </header>

      <form class="search-page__form" role="search" method="get" action="/cerca" data-search-form>
        <label class="search-page__label" for="search-query">
          <span class="sr-only">Cerca libri, autori o articoli</span>
          <input
            id="search-query"
            name="q"
            type="search"
            autocomplete="off"
            inputmode="search"
            placeholder="Titoli, autori, parole chiave…"
            aria-describedby="search-status"
            class="search-page__input"
            data-search-input
          />
        </label>
        <button type="submit" class="search-page__submit">Cerca</button>
      </form>

      <p
        class="search-page__status"
        id="search-status"
        role="status"
        aria-live="polite"
        data-search-status
      >
        Inserisci almeno {MIN_QUERY_LENGTH} caratteri per iniziare.
      </p>

      <div class="search-filters" data-search-filters>
        <span class="search-filters__label">Filtra per:</span>
        <label class="search-filters__item">
          <input type="checkbox" value="books" data-search-filter />
          <iconify-icon icon="iconoir:book" width="16" height="16" aria-hidden="true"
          ></iconify-icon>
          <span>Libri</span>
        </label>
        <label class="search-filters__item">
          <input type="checkbox" value="authors" data-search-filter />
          <iconify-icon icon="iconoir:user-badge-check" width="16" height="16" aria-hidden="true"
          ></iconify-icon>
          <span>Autori</span>
        </label>
        <label class="search-filters__item">
          <input type="checkbox" value="info" data-search-filter />
          <iconify-icon icon="iconoir:post" width="16" height="16" aria-hidden="true"
          ></iconify-icon>
          <span>Informazioni</span>
        </label>
        <label class="search-filters__item">
          <input type="checkbox" value="exact" data-search-exact />
          <iconify-icon icon="iconoir:lock" width="16" height="16" aria-hidden="true"
          ></iconify-icon>
          <span>Ricerca esatta</span>
        </label>
      </div>

      <div class="search-results" data-search-results hidden>
        <ul class="search-results__list" data-search-list></ul>
      </div>
    </div>
  </section>

  <!-- NOTE: Manteniamo gli styles inline per avere markup, script e regole di layout della ricerca nello stesso file dedicato -->
  <style>
    .search-page {
      padding: 4rem 0 6rem;
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.95), rgba(245, 244, 240, 0.9));
    }

    .search-page__container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .search-page__intro {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .search-page__title {
      font-size: clamp(1.8rem, 2vw + 1rem, 2.6rem);
      font-weight: 700;
      color: var(--brand-navy, #16213e);
    }

    .search-page__subtitle {
      max-width: 48rem;
      color: rgba(9, 21, 40, 0.7);
      line-height: 1.6;
    }

    .search-page__form {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: center;
      background: rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(15, 32, 60, 0.1);
      border-radius: 9999px;
      padding: 0.5rem 0.75rem;
      box-shadow: 0 12px 40px rgba(13, 30, 54, 0.08);
    }

    .search-page__label {
      flex: 1 1 240px;
    }

    .search-page__input {
      width: 100%;
      border: none;
      background: transparent;
      font-size: 1rem;
      padding: 0.5rem 0.75rem;
      color: var(--brand-navy, #16213e);
    }

    .search-page__input:focus {
      outline: none;
    }

    .search-page__submit {
      appearance: none;
      border: none;
      border-radius: 9999px;
      background: var(--brand-orange, #f27052);
      color: #fff;
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      padding: 0.65rem 1.5rem;
      cursor: pointer;
      transition:
        transform 160ms ease,
        background 160ms ease;
    }

    .search-page__submit:hover,
    .search-page__submit:focus-visible {
      background: var(--brand-crimson, #c74a35);
      outline: none;
      transform: translateY(-1px);
    }

    .search-page__status {
      font-size: 0.95rem;
      color: rgba(9, 21, 40, 0.75);
      min-height: 1.5rem;
    }

    .search-results__list {
      display: grid;
      gap: 1.5rem;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .search-filters {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: center;
      color: rgba(9, 21, 40, 0.8);
      font-size: 0.9rem;
    }

    .search-filters__label {
      font-weight: 600;
      color: var(--brand-navy, #16213e);
    }

    .search-filters__item {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      position: relative;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 9999px;
      border: 1px solid rgba(15, 32, 60, 0.12);
      padding: 0.4rem 0.85rem;
      cursor: pointer;
      transition:
        background 160ms ease,
        border-color 160ms ease,
        color 160ms ease;
    }

    .search-filters__item:hover,
    .search-filters__item:focus-within {
      border-color: rgba(15, 32, 60, 0.25);
      background: #ffffff;
    }

    .search-filters__item input {
      accent-color: var(--brand-orange, #f27052);
    }

    .search-filters__item iconify-icon {
      color: var(--brand-orange, #f27052);
    }

    .search-filters__item input {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }

    .search-filters__item.is-active {
      background: var(--brand-orange, #f27052);
      border-color: var(--brand-orange, #f27052);
      color: #fff;
    }

    .search-filters__item.is-active iconify-icon,
    .search-filters__item.is-active span {
      color: #fff;
    }

    .search-filters__item input:checked + iconify-icon,
    .search-filters__item input:checked + iconify-icon + span,
    .search-filters__item input:checked ~ span {
      color: #fff;
    }

    .search-filters__item input:checked ~ iconify-icon,
    .search-filters__item input:checked ~ span {
      color: #fff;
    }

    .search-filters__item input:checked ~ iconify-icon {
      color: #fff;
    }

    .search-filters__item input:checked ~ span {
      color: #fff;
    }

    .search-filters__item input:checked {
      accent-color: #fff;
    }

    .search-filters__item input:checked + iconify-icon,
    .search-filters__item input:checked + iconify-icon + span {
      color: #fff;
    }

    .search-filters__item input:checked + iconify-icon {
      color: #fff;
    }

    .search-filters__item input:checked ~ iconify-icon {
      color: #fff;
    }

    .search-filters__item input:checked ~ span {
      color: #fff;
    }

    .search-filters__item input:checked ~ iconify-icon {
      color: #fff;
    }

    .search-filters__item input:checked ~ span {
      color: #fff;
    }

    .search-filters__item:has(input:checked) {
      background: var(--brand-orange, #f27052);
      border-color: var(--brand-orange, #f27052);
      color: #fff;
    }

    .search-result {
      display: grid;
      gap: 0.75rem;
      padding: 1.25rem 1.5rem;
      border-radius: 1.25rem;
      background: rgba(255, 255, 255, 0.92);
      box-shadow: 0 12px 32px rgba(13, 30, 54, 0.08);
      transition:
        transform 160ms ease,
        box-shadow 160ms ease;
    }

    .search-result:hover,
    .search-result:focus-within {
      transform: translateY(-2px);
      box-shadow: 0 18px 48px rgba(13, 30, 54, 0.14);
    }

    :global(.search-result__badge) {
      align-self: start;
      display: inline-flex;
      align-items: center;
      gap: 0.7rem;
      font-size: 0.6rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.18em;
      background: rgba(242, 112, 82, 0.16);
      color: var(--brand-navy, #16213e);
      padding: 0.4rem 1.05rem;
      border-radius: 9999px;
      border: 1px solid rgba(242, 112, 82, 0.35);
      margin-bottom: 0.35rem;
    }

    :global(.search-result__badge iconify-icon) {
      color: var(--brand-orange, #f27052);
      font-size: 1.25rem;
    }

    .search-result__title {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--brand-navy, #16213e);
      line-height: 1.4;
    }

    .search-result__title a {
      color: inherit;
      text-decoration: none;
    }

    .search-result__title a:hover,
    .search-result__title a:focus {
      text-decoration: underline;
    }

    .search-result__excerpt {
      font-size: 0.95rem;
      line-height: 1.6;
      color: rgba(9, 21, 40, 0.8);
    }

    .search-result__url {
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      color: rgba(9, 21, 40, 0.55);
    }

    .search-result__url-link {
      color: inherit;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }

    .search-result__url-link:hover,
    .search-result__url-link:focus-visible {
      color: var(--brand-orange, #f27052);
      text-decoration: underline;
    }

    .highlight {
      background: rgba(242, 112, 82, 0.25);
      color: inherit;
      padding: 0 0.2em;
      border-radius: 0.25em;
    }

    @media (max-width: 768px) {
      .search-page {
        padding: 2.5rem 0 4rem;
      }

      .search-page__form {
        border-radius: 1.5rem;
        flex-direction: column;
        align-items: stretch;
        gap: 0.5rem;
      }

      .search-page__submit {
        display: none;
      }

      .search-page__label {
        flex: 1 1 auto;
      }

      .search-filters {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 0.75rem;
        justify-items: stretch;
      }

      .search-filters__label {
        display: block;
        grid-column: 1 / -1;
      }

      .search-filters__item {
        justify-content: center;
      }
    }
  </style>

  <script type="module" src={searchScriptSrc} is:inline></script>
</BaseLayout>
